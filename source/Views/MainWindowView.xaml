<MWF:ModernWindowFrame x:Class="Unification.Views.MainWindowView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:MWF="clr-namespace:ModernWindowFrameLibrary;assembly=ModernWindowFrameLibrary"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       mc:Ignorable="d"
                       Title="Unification" 
                       Height="720"    Width="1280"
                       MinHeight="480" MinWidth="640"
                       ResizeHandle="All">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="1" SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="PlaybackButtonControlsPanel" Grid.Column="0" Orientation="Horizontal" Margin="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="Back"    Content="Back"    Margin="1" Height="30" Width="60" VerticalAlignment="Center"/>
                <Button x:Name="Stop"    Content="Stop"    Margin="1" Height="30" Width="60" VerticalAlignment="Center"/>
                <Button x:Name="Play"    Content="Play"    Margin="1" Height="30" Width="60" VerticalAlignment="Center"/>
                <Button x:Name="Forward" Content="Forward" Margin="1" Height="30" Width="60" VerticalAlignment="Center"/>
            </StackPanel>
            
            <Grid Grid.Column="1" Margin="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Slider x:Name="ProgressSlider" Margin="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" SnapsToDevicePixels="True"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="MediaViewsButtonsPanel" Grid.Column="0" Orientation="Horizontal" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                        <Button x:Name="ListView"  Content="L" Margin="1,0" Height="30" Width="30" HorizontalAlignment="Center"/>
                        <Button x:Name="AlbumView" Content="A" Margin="1,0" Height="30" Width="30" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Slider x:Name="VolumeSlider" Grid.Column="1" Margin="1" Width="200" VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                </Grid>
            </Grid>

            <StackPanel x:Name="SettingsButtonsPanel" Grid.Column="2" Margin="0,1,3,1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button x:Name="Settings"         Content="S" Margin="0,1,1,1" Height="30" Width="30" HorizontalAlignment="Left"/>
                <Button x:Name="BackgroundToggle" Content="B" Margin="0,1,1,1" Height="30" Width="30" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="DatasourceGrid" Grid.Column="0"/>
            <Grid x:Name="MediaViewGrid"  Grid.Column="1"/>
            <Grid x:Name="PlaylistGrid"   Grid.Column="2"/>
        </Grid>

        <Grid x:Name="VisualizerGrid" Grid.Row="2" d:IsHidden="True"/>
    </Grid>
</MWF:ModernWindowFrame>
